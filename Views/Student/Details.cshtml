@model WebApplicationMVC.Models.Student

@{
    ViewData["Title"] = "Details";
}

<h1>Student Details</h1>

<div class="card mt-4">
    <div class="card-header">
        <h4>Student Information</h4>
    </div>
    <div class="card-body">
        <dl class="row">
            <dt class="col-sm-3">Id</dt>
            <dd class="col-sm-9" id="studentId">@Model.Id</dd>

            <dt class="col-sm-3">Name</dt>
            <dd class="col-sm-9" id="studentName">@Model.Name</dd>

            <dt class="col-sm-3">Age</dt>
            <dd class="col-sm-9" id="studentAge">@Model.Age</dd>

            <dt class="col-sm-3">Gender</dt>
            <dd class="col-sm-9" id="studentGender">@Model.Gender</dd>

            <dt class="col-sm-3">Standard</dt>
            <dd class="col-sm-9" id="studentStander">@Model.Stander</dd>

            <dt class="col-sm-3">Father Name</dt>
            <dd class="col-sm-9" id="studentFatherName">@Model.FatherName</dd>
        </dl>
    </div>
</div>

<div class="mt-3">
    <a id="editLink" class="btn btn-warning" href="@Url.Action("Edit", "Student", new { id = Model.Id })">Edit</a>
    <a asp-action="Index" class="btn btn-secondary">Back to List</a>
</div>

@section Scripts {
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script>
        $(document).ready(function () {
            // Initialize and populate student details using jQuery
            var studentId = '@Model.Id';
            var studentName = '@Model.Name';
            var studentAge = '@Model.Age';
            var studentGender = '@Model.Gender';
            var studentStander = '@Model.Stander';
            var studentFatherName = '@Model.FatherName';

            // Dynamically populate fields with jQuery
            $('#studentId').text(studentId);
            $('#studentName').text(studentName);
            $('#studentAge').text(studentAge);
            $('#studentGender').text(studentGender);
            $('#studentStander').text(studentStander);
            $('#studentFatherName').text(studentFatherName);

            // Update the edit link dynamically
            $('#editLink').attr('href', '@Url.Action("Edit", "Student", new { id = Model.Id })');
        });
    </script>
}
