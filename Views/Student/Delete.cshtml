@model WebApplicationMVC.Models.Student

@{
    ViewData["Title"] = "Delete";
}

<h1>Delete Student</h1>

<h3 class="text-danger">Are you sure you want to delete this record?</h3>
<div class="card mt-4">
    <div class="card-header">
        <h4>Student Details</h4>
    </div>
    <div class="card-body">
        <dl class="row">
            <dt class="col-sm-3">Id</dt>
            <dd class="col-sm-9">@Html.DisplayFor(model => model.Id)</dd>

            <dt class="col-sm-3">Name</dt>
            <dd class="col-sm-9">@Html.DisplayFor(model => model.Name)</dd>

            <dt class="col-sm-3">Age</dt>
            <dd class="col-sm-9">@Html.DisplayFor(model => model.Age)</dd>

            <dt class="col-sm-3">Gender</dt>
            <dd class="col-sm-9">@Html.DisplayFor(model => model.Gender)</dd>

            <dt class="col-sm-3">Standard</dt>
            <dd class="col-sm-9">@Html.DisplayFor(model => model.Stander)</dd>

            <dt class="col-sm-3">Father Name</dt>
            <dd class="col-sm-9">@Html.DisplayFor(model => model.FatherName)</dd>
        </dl>
    </div>
</div>

<div class="mt-4">
    <form id="deleteForm" asp-action="Delete" method="post">
        <input type="submit" value="Delete" class="btn btn-danger" />
        <a asp-action="Index" class="btn btn-secondary">Back to List</a>
    </form>
</div>

@section Scripts {
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script>
        $(document).ready(function () {
            // Confirm deletion on form submission
            $('#deleteForm').submit(function (event) {
                var confirmed = confirm("Are you sure you want to delete this student?");
                if (!confirmed) {
                    event.preventDefault(); // Prevent form submission if the user cancels
                }
            });
        });
    </script>
}
